        <item name="md_explain_color">@color/xui_config_color_light_blue_gray</item>
        <item name="md_icon_limit_icon_to_default_size">false</item>

        <!--**********************************************
        *                   xui popup                    *
        ***********************************************-->
        <item name="xui_popup_bg">@drawable/xui_popup_bg</item>
        <item name="xui_popup_arrow_down">@drawable/xui_popup_arrow_down</item>
        <item name="xui_popup_arrow_up">@drawable/xui_popup_arrow_up</item>
        <item name="xui_popup_arrow_up_margin_top">17dp</item>
        <item name="xui_popup_arrow_down_margin_bottom">17dp</item>
    </style>

