        <attr name="sUseRipple" format="boolean" />

        <attr name="sBackgroundDrawableRes" format="reference" />

        <!--是否使用shape设置圆角及触摸反馈 设为true之后才能使用以下属性-->
        <attr name="sUseShape" format="boolean" />
