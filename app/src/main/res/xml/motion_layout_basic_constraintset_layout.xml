<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/motion_basic_constraintset_layout_end"
        motion:constraintSetStart="@layout/motion_basic_constraintset_layout_start"
        motion:duration="1000">

        <!--  motion:dragDirection="dragRight" 意思是向右拖动时进度会增加。 -->
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@+id/button"
            motion:touchAnchorSide="right" />

    </Transition>

</MotionScene>
