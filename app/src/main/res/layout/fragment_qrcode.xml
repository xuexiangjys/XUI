<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle.Title"
                android:text="欢迎长按或扫码关注：" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_qq_group"
                android:layout_width="200dp"
                android:layout_height="274dp"
                android:layout_gravity="center"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                android:src="@drawable/img_qq_group" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_win_xin"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                android:src="@drawable/img_winxin_subscription_number" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>